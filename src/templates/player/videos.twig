<div class="card-body">
    <h5 class="card-title text-anton text-maastricht-blue pb-2">Videos</h5>

    <div class="row">
        <div class="col-4">


            {% for video in videos %}
                <div class="row">
                    <div class="col-4">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe width="420" height="315"
                                    src="{% if video %}{{ video.url.replace("watch?v=", "embed/") }}{% endif %}">
                            </iframe>
                        </div>
                    </div>
                    <div class="col-8">
                        <h6 class="text-anton text-maastricht-blue pb-2">{{ video.title }} - {{ video.published_at }}</h6>
                        <div class="form-group">
                            <label>Valid?</label>
                            <input type="checkbox" class="form-control">
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <div class="col-8">
            <h3>Video Transcript</h3>
        </div>

    </div>
    <button class="btn btn-soft-green" onclick="loadPage('/api/athletes/{{ player.id }}/videos', 'tabVideos')"> Refresh </button>
</div>
