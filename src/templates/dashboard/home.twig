<main class="container-fluid mx-auto">
    <div class="row my-4">
        <div class="col">
            <h2 class="text-body">Overview</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-2 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title fw-bolder text-darker-green">{{ total_transcribed_stats.unprocessed.unprocessed_count }} / {{ total_transcribed_stats.unprocessed.unprocessed_count + total_transcribed_stats.processed.processed_count }}</h5>
                            <p class="card-text">Videos Transcribed</p>
                        </div>
                        <div class="col-3">
                            <img src="/images/dashboard/icon-transcribed.svg" alt="Transcribe Icon" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title fw-bolder text-darker-green">120</h5>
                            <p class="card-text">Players Loaded</p>
                        </div>
                        <div class="col-3">
                            <img src="/images/dashboard/icon-loaded.svg" alt="Transcribe Icon" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title fw-bolder text-darker-green">{{ total_transcribed_stats.total_media.total_media }}</h5>
                            <p class="card-text">Videos Found</p>
                        </div>
                        <div class="col-3">
                            <img src="/images/dashboard/icon-videos.svg" alt="Transcribe Icon" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title fw-bolder text-darker-green">{{ total_transcribed_stats.valid_media.valid_media }}</h5>
                            <p class="card-text">Pending Transcripts</p>
                        </div>
                        <div class="col-3">
                            <img src="/images/dashboard/icon-pending.svg" alt="Transcribe Icon" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>