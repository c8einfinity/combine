{% extends "base.twig" %}

{% block content_public %}
    <style>
        body {
            background: #3579EB;
        }
    </style>
    <div class="container">
    <div class="px-3 py-4">
        <div class="content pt-4 pb-5 px-4">
            <div class="row">
                <h3>{{ video.title }}</h3>
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe width="420" height="315"
                            src="{% if video %}{{ video.url.replace("watch?v=", "embed/") }}{% endif %}?rel=0">
                    </iframe>

                </div>
                <div class="col">
                    <a href="{% if video %}{{ video.url }}{% endif %}" target="_blank">Click here to watch the video directly on YouTube if it does not display in the frame above</a>
                    <form method="post" onsubmit="return false">
                        <input type="hidden" name="player_id" value="{{ player.id }}">
                        <input type="hidden" name="player_media_id" value="{{ video.id }}">
                        <input type="hidden" name="is_valid" value="0">
                        <br>
                        <div class="row">
                            <div class="col">
                                <button class="btn btn-danger" onclick="document.forms[0].is_valid.value = 0; document.forms[0].submit()">NO</button>
                            </div>
                            <div clss="col">
                            <h4>Video contains audio of {{ player.first_name}} {{ player.last_name}} speaking?</h4>
                            </div>
                            <div class="col">
                                <button class="btn btn-primary" style="float: right" onclick="document.forms[0].is_valid.value = 1; document.forms[0].submit()">Yes</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col"></div>
                            <div class="col"><h4 class="text-center">{{ counter }}</h4></div>
                            <div class="col"></div>
                        </div>
                        {{  ("SomeValue"~RANDOM()) | formToken }}
                    </form>
                </div>

            </div>
        </div>
    </div>
    </div>
{% endblock %}
